:root {
    --main-white: rgb(209, 209, 209);
}

.rpg-ui-button {
    flex-direction: row;
}

.rpg-ui-button-icon {
    width: 64px;
    height: 64px;
    align-self: center;
    margin-right: 8px;
    background-image: url("project://database/Packages/com.rpgframework.core/Runtime/UI/right.png?fileID=2800000&guid=5e7b180264754214a907ba761d020a48&type=3#right");
}

.rpg-ui-label {
    color: var(--main-white);
    text-shadow: 4px 3px 0 rgba(0, 0, 0, 0.27);
    -unity-text-align: middle-left;
}